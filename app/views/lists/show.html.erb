<p id="notice"><%= notice %></p>

<h1><%= @list.name %></h1>
<%= link_to 'Edit List', edit_list_path(@list), class: "btn btn-xs btn-info" %>
<hr>
<p>
  <strong>Subject: </strong><%= @list.subject %>
</p>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% if @list.tasks.empty? %>
      <tr>
        <td>
          No tasks to show
        </td>
      </tr>
    <% else %>
      <% @list.tasks.each do |task| %>
        <tr>
          <td><%= task.name %></td>
          <td><%= task.date %></td>
          <td>
          <% unless task.done? %>
            <%= link_to 'Done', done_path(task), method: :post, class: 'btn btn-success btn-xs'%>
          <% else %>
            <div class= 'btn btn-warning btn-xs disabled'>
              Completed
            </div>
          <% end %>
          <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-info btn-xs' %>
          <%= link_to 'Destroy', '#',data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>




<%= link_to 'Back', lists_path, class: "btn btn-default btn-xs" %>
<%= link_to 'New task', new_task_path(list: @list.id), class: "btn btn-success btn-xs", id: 'newTask'  %>
