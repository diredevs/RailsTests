<h1>Lists</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Subject</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= link_to list.name, list %></td>
        <td><%= list.subject %></td>
        <td><%= link_to 'Show', list_path(list), class: 'btn btn-primary btn-xs' %>
        <%= link_to 'Edit', edit_list_path(list), class: 'btn btn-info btn-xs' %>
        <%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New List', new_list_path, class: 'btn btn-success btn-sm' %>
